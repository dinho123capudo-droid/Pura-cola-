<script>
let tocando = false;
function tocarMusica() {
  if (!tocando) {
    document.getElementById("musica").src += "&autoplay=1";
    tocando = true;
  }
}

function criarFogo(e) {
  const fogo = document.createElement("div");
  fogo.className = "firework";
  fogo.style.left = e.clientX + "px";
  fogo.style.top = e.clientY + "px";
  document.body.appendChild(fogo);
  setTimeout(() => fogo.remove(), 1000);
}
</script>

