  <script>
    function criarBaloes() {
      for (let i = 0; i < 20; i++) {
        const balao = document.createElement("div");
        balao.className = "balloon";
        balao.style.left = Math.random() * 100 + "vw";
        balao.style.animationDuration = (5 + Math.random() * 5) + "s";
        balao.style.background = `hsl(${Math.random() * 360}, 80%, 70%)`;
        document.body.appendChild(balao);

        setTimeout(() => balao.remove(), 10000);
      }
    }

    setInterval(criarBaloes, 2000);

    function tocarMusica() {
      document.getElementById("musica").play();
    }
  </script>

