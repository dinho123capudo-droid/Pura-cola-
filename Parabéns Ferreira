  <script>
    /* ğŸˆ BALÃ•ES (poucos de cada vez) */
    function criarBalao() {
      const balao = document.createElement("div");
      balao.className = "balloon";
      balao.style.left = Math.random() * 100 + "vw";
      balao.style.animationDuration = (6 + Math.random() * 4) + "s";
      balao.style.background = `hsl(${Math.random() * 360}, 80%, 70%)`;
      document.body.appendChild(balao);
      setTimeout(() => balao.remove(), 12000);
    }
    setInterval(criarBalao, 1800);

    /* ğŸ† CONFETES / FOGOS */
    function criarConfete() {
      const confete = document.createElement("div");
      confete.className = "confetti";
      confete.style.left = Math.random() * 100 + "vw";
      confete.style.background = `hsl(${Math.random() * 360}, 100%, 60%)`;
      confete.style.animationDuration = (2 + Math.random() * 3) + "s";
      document.body.appendChild(confete);
      setTimeout(() => confete.remove(), 5000);
    }
    setInterval(criarConfete, 300);
  </script>

